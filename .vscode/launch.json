{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "NPM start",
        "program": "/app/index.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["/app/out/**/*.js"]
      },
      {
        "type": "node", 
        "request": "launch", 
        "name": "Jest run all tests (no watch)",
        "program": "/app/node_modules/jest/bin/jest.js",
        "args": [
          "--verbose", // check if it is worse it.. and spread
          "-i", // check if it is worker per test/describe/expect and spread
          "--watch" // probably more relevant for specific file, thoug
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        }
      },
      {
        "type": "node",
        "request": "launch", 
        "name": "Jest run & watch currently opened", 
        "program": "/app/node_modules/jest/bin/jest.js", 
        "args": [
          "${fileBasenameNoExtension}",
        ],
        "console": "integratedTerminal", 
        "internalConsoleOptions": "neverOpen", 
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest All",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "-i"
        ],
        "console": "integratedTerminal", 
        "internalConsoleOptions": "neverOpen", 
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest Current File",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "-i",
          "${relativeFile}",
          "--config",
          "jest.config.js"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        }
      }
    ]
}

    
